<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/motion_scene"
    tools:showPath="true"
    app:motionDebug="SHOW_ALL"
    tools:context=".AdvActivity">



    <FrameLayout
        android:id="@+id/nextCard"
        android:background="@color/colorPrimary"
        android:layout_width="0dp"
        android:layout_height="0dp" >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="15dp"
            android:id="@+id/nextCardView">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/top_card_back">

                <TextView
                    android:id="@+id/nextCardTextView"
                    android:layout_width="309dp"
                    android:layout_height="118dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="22dp"
                    android:text="Description test"
                    android:textColor="#040152"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/nextCardLengthView"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nextCardTextView"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="228dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="22dp"
                    android:text="228 m"
                    android:textColor="#3A270A"
                    android:textSize="18sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/topCard"
        android:background="@color/colorAccent"
        android:layout_width="0dp"
        android:layout_height="0dp" >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="15dp"
            android:id="@+id/topCardView">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/top_card_back">

                <TextView
                    android:id="@+id/topCardTextView"
                    android:layout_width="309dp"
                    android:layout_height="118dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="22dp"
                    android:text="Description test"
                    android:textColor="#040152"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/topCardLengthView"
                    android:layout_width="101dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/topCardTextView"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="228dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="22dp"
                    android:text="228 m"
                    android:textColor="#3A270A"
                    android:textSize="18sp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

</androidx.constraintlayout.motion.widget.MotionLayout>